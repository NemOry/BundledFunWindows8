    <Page
    x:Class="BundledFun.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BundledFun"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    

    <Grid Background="#FFF7F7F7">
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="32" Margin="816,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" FontSize="14.667" BorderBrush="#FFB2B2B2" Foreground="#FFB2B2B2" TabIndex="0"/>
        <TextBlock HorizontalAlignment="Left" Height="15" Margin="816,340,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="75" Foreground="#FFB2B2B2"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="816,404,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="75" Foreground="#FFB2B2B2"/>
        <Button x:ConnectionId='1' x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="38" Margin="813,464,0,0" VerticalAlignment="Top" Width="105" FontSize="14.667"                        Foreground="White" Background="#FF3BA9FF" BorderBrush="White" TabIndex="2"/>
        <Image HorizontalAlignment="Left" Height="324" VerticalAlignment="Top" Width="601" Source="Assets/bg.png" Margin="86,268,0,0"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="32" Margin="816,427,0,0" VerticalAlignment="Top" Width="214" BorderBrush="#FFB2B2B2" Foreground="#FFB2B2B2" FontSize="14.667" TabIndex="1"/>
        <ProgressRing x:Name="progressRing" HorizontalAlignment="Left" Height="38" Margin="918,464,0,0" VerticalAlignment="Top" Width="39" Foreground="#FF363636" BorderBrush="#FF8D8D8D"/>
        <Button x:ConnectionId='2' x:Name="btnSignUp" Content="Sign Up" HorizontalAlignment="Left" Height="38" Margin="438,145,0,0" VerticalAlignment="Top" Width="112" FontSize="14.667" Foreground="White" Background="#FF18C15D" BorderBrush="White"                        />
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="210,152,0,0" TextWrapping="Wrap" Text="SignUp and join the fun" VerticalAlignment="Top" Width="223" Foreground="#FFB2B2B2" FontSize="20"/>

    </Grid>

</Page>

